{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "moduleResolution": "node",
        "noImplicitThis": false,
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": ["node"]
    },
    "include": ["index.ts"],
    "exclude": ["node_modules", "common"]
}
